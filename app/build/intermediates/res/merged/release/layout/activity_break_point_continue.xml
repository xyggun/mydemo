<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xyggun.mydemo.ui.BreakPointContinueActivity">

    <include layout="@layout/view_header"
        android:id="@+id/include"></include>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始下载"
        android:id="@+id/btn_start"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停下载"
        android:id="@+id/btn_pause"
        android:layout_below="@+id/btn_start"
        android:layout_alignLeft="@+id/btn_start"
        android:layout_alignStart="@+id/btn_start" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续下载"
        android:id="@+id/btn_resume"
        android:layout_below="@+id/btn_pause"
        android:layout_alignLeft="@+id/btn_pause"
        android:layout_alignStart="@+id/btn_pause" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="断点续传demo"
        android:id="@+id/textView"
        android:padding="5dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/include"/>


</RelativeLayout>
