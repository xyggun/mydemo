<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/but_header_back"
        style="@style/layout_style"
        android:layout_centerVertical="true"
        android:contentDescription="@string/header_view_img"
        android:src="@drawable/back"
        android:background="@drawable/but_header_back" />

    <LinearLayout
        android:id="@+id/header_center_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true" >
        <TextView
            android:id="@+id/head_view_title"
            style="@style/text_style18"
            android:textSize="19sp"
            android:gravity="center_vertical"
            android:layout_height="fill_parent"
            android:textColor="@color/white" />
    </LinearLayout>
    <Button
        android:id="@+id/header_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/but_header_back"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="gone" />
    <ImageButton
        android:id="@+id/header_right_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/header_view_img"
        android:visibility="gone"
        android:src="@drawable/listbutton"
        android:background="@drawable/but_header_back" />
</RelativeLayout>